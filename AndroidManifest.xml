<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dare"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name=".DareApplication"
        >
        <activity
            android:name=".activity.ChallengesActivity"
            android:label="@string/title_activity_challenges" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".activity.ChallengeSubmissionsActivity"
            android:label="@string/title_activity_challenge_submissions" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".model.ChallengeProvider"
            android:authorities="com.dare.content.challenges" >
        </provider>
        
        <provider
            android:name=".model.SubmissionProvider"
            android:authorities="com.dare.content.submissions" >
        </provider>
        
    </application>

</manifest>